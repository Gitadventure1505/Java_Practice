package Pattern;

public class Basic14 {

	public static void main(String[] args) 
	{
		int ch ='A';
      for(int i = 1; i<=4;  i++)
      {
    	  for(int j = 1; j<=i; j++)
    	  {
    		  System.out.println(ch);
    		  ch++;
    	  }
    	  ch = ch+(4-i);
    			  System.out.println();
      }
	}

}
